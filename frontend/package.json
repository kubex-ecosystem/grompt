{
  "name": "krompt",
  "version": "1.0.0",
  "description": "Krompt: A React-based Prompt Engineering Tool for AI Models",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.2",
    "lucide-react": "^0.263.1",
