  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run post-build || echo '⚠️ Build error! Check the logs above.'",
    "post-build": "bash ../support/post_build.sh",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
